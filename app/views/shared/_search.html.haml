#search.col-sm-10.col-sm-offset-1
  = form_tag(search_path, method: :post) do
    .input-group.stylish-input-group
      %input.form-control{:placeholder => "Que cherchez-vous ?", :type => "text", :name => "searches[term]", value: params[:searches] ? params[:searches][:term] : ""}/
      %span.input-group-addon
        %button{:type => "submit"}
          %span.fa.fa-search
